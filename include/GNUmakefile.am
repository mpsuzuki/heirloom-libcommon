BUILT_SOURCES =

if NEED_ALLOCA_H
BUILT_SOURCES += alloca.h
endif

if NEED_MALLOC_H
BUILT_SOURCES += malloc.h
endif

if NEED_UTMPX_H
BUILT_SOURCES += utmpx.h
endif

MOSTLYCLEANFILES = $(BUILT_SOURCES)

all: $(BUILT_SOURCES)

alloca.h: $(top_srcdir)/_alloca.h
	$(LN_S) $^ $(builddir)/$(notdir $@)

malloc.h: $(top_srcdir)/_malloc.h
	$(LN_S) $^ $(builddir)/$(notdir $@)

utmpx.h: $(top_srcdir)/_utmpx.h
	$(LN_S) $^ $(builddir)/$(notdir $@)
